<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#33000000"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ImageViewReset"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:src="@drawable/musicplaystop" >
        </ImageView>

        <ImageView
            android:id="@+id/imageViewPlayStop"
            android:layout_width="45dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom"
            android:paddingLeft="6dip"
            android:src="@drawable/movieplay" >
        </ImageView>

        <ImageView
            android:id="@+id/imageViewFullChange"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:paddingLeft="6dip"
            android:scaleType="fitXY"
            android:src="@drawable/fullscreennormal" >
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/moviePlayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="6dip"
            android:text="58:45"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#CCCCCC"
            android:textSize="20dp" >
        </TextView>

        <SeekBar
            android:id="@+id/seekBarPlay"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="6dip"
            android:progressDrawable="@drawable/progressbar_first"
            android:thumb="@drawable/progress_dot" >
        </SeekBar>

        <TextView
            android:id="@+id/movieDurationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="01:40"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#CCCCCC"
            android:textSize="20dp" >
        </TextView>

        <TextView
            android:id="@+id/textMovieState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="6dip"
            android:text="停止" >
        </TextView>

        <TextView
            android:id="@+id/textMoviePlayStype"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="6dip"
            android:text="播放模式" >
        </TextView>
    </LinearLayout>

</LinearLayout>