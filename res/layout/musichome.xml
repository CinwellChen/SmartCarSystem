<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ViewFlipper
        android:id="@+id/viewFlipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <!-- Second Page -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/musicback"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txt5"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="当前播放列表"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp" />
            </LinearLayout>

            <ListView
                android:id="@+id/listViewSong"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:drawSelectorOnTop="false"
                android:fadeScrollbars="false"
                android:fadingEdge="none"
                android:scrollbarFadeDuration="0"
                android:scrollingCache="false" >
            </ListView>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#33000000"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/musicBtnAddFiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 添加  " />

                <Button
                    android:id="@+id/musicBtnAddFolders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="文件夹" />

                <Button
                    android:id="@+id/musicBtnScanFiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 扫描  " />

                <Button
                    android:id="@+id/musicBtnDelFiles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="删除" />

                <Button
                    android:id="@+id/buttonMusicClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关闭" >
                </Button>

                <Button
                    android:id="@+id/buttonMUsicMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最小化" >
                </Button>

                <Button
                    android:id="@+id/enterplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进入播放" />
            </LinearLayout>
        </LinearLayout>

        <!-- First Page -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/musicback"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="#33000000"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ImageViewHome"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:paddingLeft="6dip"
                    android:src="@drawable/homeicon" />

                <Button
                    android:id="@+id/list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音乐列表" />

                <ImageButton
                    android:id="@+id/imageButtonVoice"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="#00000000"
                    android:scaleType="fitXY"
                    android:src="@drawable/musicvoiceopen" />

                <SeekBar
                    android:id="@+id/seekBarVoice"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:max="50"
                    android:paddingLeft="10dip"
                    android:paddingRight="4dip"
                    android:progressDrawable="@drawable/progressbar_first"
                    android:thumb="@drawable/progress_dot" />

                <TextView
                    android:id="@+id/textMusicVoice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dip"
                    android:text="音量(x)"
                    android:textColor="#FFFF00"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:textColor="#CD0000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="185dp"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌名:XXX"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="歌手：xxx"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:bufferType="normal"
                    android:text="专辑：yyy"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=".............."
                    android:textColor="#FFFF00"
                    android:textSize="25dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/imageViewMusicPlayModel"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/musicplaytype1" />

                    <TextView
                        android:id="@+id/textSongPlayStype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="6dip"
                        android:paddingTop="4dip"
                        android:text="播放模式"
                        android:textColor="#000000"
                        android:textSize="10dip" />

                    <TextView
                        android:id="@+id/playTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dip"
                        android:paddingTop="10dip"
                        android:text="00:00"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#AEEEEE"
                        android:textSize="20dip" />

                    <SeekBar
                        android:id="@+id/seekBarPlay"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="20dip"
                        android:paddingRight="10dip"
                        android:progressDrawable="@drawable/progressbar_first"
                        android:thumb="@drawable/progress_dot" />

                    <TextView
                        android:id="@+id/durationTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="6dip"
                        android:paddingTop="10dip"
                        android:text="00:00"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#AEEEEE"
                        android:textSize="20dip" />

                    <TextView
                        android:id="@+id/textMusicState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dip"
                        android:text="停止"
                        android:textColor="#000000"
                        android:textSize="10dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ImageViewReset"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:paddingRight="6dip"
                        android:src="@drawable/musicplaystop" />

                    <ImageView
                        android:id="@+id/ImageViewBefore"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/musicplaybefore" />

                    <ImageView
                        android:id="@+id/imageViewPlayStop"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/musicplaystart" />

                    <ImageView
                        android:id="@+id/ImageViewNext"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/musicplaynext" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ViewFlipper>

