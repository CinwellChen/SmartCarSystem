<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/musicback"
    android:orientation="vertical" >

    <!--
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/homeback" >
    </ImageView>
    -->

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- android:background="@drawable/car14" -->

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/ImageViewHome"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:src="@drawable/homeicon" >
            </ImageView>

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="关闭" >
            </Button>
        </LinearLayout>

        <DigitalClock
            android:id="@+id/digitalClockSystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:bufferType="normal"
            android:text="DigitalClock"
            android:textColor="#000000"
            android:textSize="30dp" >
        </DigitalClock>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </LinearLayout>

    <TableLayout
        android:id="@+id/TableLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/ImageButtonMusic"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="fitXY"
                android:src="@drawable/musicicon" 
                android:background="#00000000">
            </ImageButton>

            <ImageButton
                android:id="@+id/ImageButtonMovie"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="fitXY"
                android:src="@drawable/movieicon" 
                android:background="#00000000">
            </ImageButton>

            <ImageButton
                android:id="@+id/ImageButtonInternet"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="fitXY"
                android:src="@drawable/interneticon"
                android:background="#00000000" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ImageButtonMap"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="fitXY"
                android:src="@drawable/gpsicon" 
                android:background="#00000000">
            </ImageButton>
            
        </TableRow>

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            >

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="音乐"
                android:textColor="#ffffff"
                android:textSize="20dp" >
            </TextView>

            <TextView
                android:id="@+id/TextView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="影院"
                android:textColor="#ffffff"
                android:textSize="20dp" >
            </TextView>

            <TextView
                android:id="@+id/TextView05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="上网"
                android:textColor="#ffffff"
                android:textSize="20dp" >
            </TextView>

            <TextView
                android:id="@+id/TextView03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="地图"
                android:textColor="#ffffff"
                android:textSize="20dp" >
            </TextView>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" >

            <ImageButton
                android:id="@+id/ImageButtonMessage"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="fitXY"
                android:src="@drawable/messageicon"
                android:background="#00000000" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ImageButtonPhone"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="fitXY"
                android:src="@drawable/phoneicon" 
                android:background="#00000000">
            </ImageButton>

            <ImageButton
                android:id="@+id/ImageButtonCamera"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="fitXY"
                android:src="@drawable/cameraicon"
                android:background="#00000000" >
            </ImageButton>

            <ImageButton
                android:id="@+id/ImageButtonTXT"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:scaleType="fitXY"
                android:src="@drawable/managericon"
                android:background="#00000000">
            </ImageButton>
        </TableRow>

        <TableRow
            android:id="@+id/TableRow03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/TextView08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="短信"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="电话"
                android:textColor="#ffffff"
                android:textSize="20dp" >
            </TextView>

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="倒车"
                android:textColor="#ffffff"
                android:textSize="20dp" >
            </TextView>

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="电子书"
                android:textColor="#ffffff"
                android:textSize="20dp" >
            </TextView>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </LinearLayout>
    <!--
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/car14" >
    </ImageView>
    -->

</LinearLayout>